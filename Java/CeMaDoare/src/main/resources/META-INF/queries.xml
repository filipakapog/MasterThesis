<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="1.0" xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd">

    <!-- ADMIN -->
    <named-query name="Admin.adminById">
        <query>SELECT a FROM Admin a WHERE a.id = :aid</query>
    </named-query>
    <named-query name="Admin.allAdmins">
        <query>SELECT a FROM Admin a</query>
    </named-query>

    <!-- DOCTOR -->
    <named-query name="Doctor.doctorById">
        <query>SELECT d FROM Doctor d WHERE d.id = :did</query>
    </named-query>
    <named-query name="Doctor.allDoctors">
        <query>SELECT d FROM Doctor d</query>
    </named-query>

    <!-- Diagnosis -->
    <named-query name="Diagnosis.allDiagnoses">
        <query>SELECT d FROM Diagnosis d </query>
    </named-query>

    <!-- Patien -->
    <named-query name="Diagnosis.allPatients">
        <query>SELECT p FROM Patient p </query>
    </named-query>




</entity-mappings>
